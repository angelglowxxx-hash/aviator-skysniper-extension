{
  "manifest_version": 3,
  "name": "SkySniper Extension",
  "version": "4.0.0",
  "description": "SkySniper browser extension for Aviator.",
  "icons": {
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://odds96.in/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://odds96.in/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  }
}
